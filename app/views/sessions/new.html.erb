<%= render 'sadhna_cards/header' %>
<div class="login container-fluid">

	<% provide(:title, "Log in") %>

	<br>
	<br>
	<br>
	<br>
	<br>
	<br>

	<div class="row">
	  <div class="col-md-6 col-md-offset-3 log_in">

	    <%= form_for(:session, url: login_path) do |f| %>

	      <%= f.label :email %>
	      <%= f.email_field :email, class: 'form-control' %>

	      <%= f.label :password %>
	      <%= f.password_field :password, class: 'form-control' %>

	      <br>

	      <%= f.submit "Log in", class: "btn btn-primary" %>

	    <% end %>
	    <br>
	    
	  </div>

	  
	   <button class="btn btn-primary new_account">New Account?</button>
	  

	  <div class="col-md-6 col-md-offset-3 sign_up">

	    <%= form_for(:session, url: login_path) do |f| %>

	      <%= f.label :email %>
	      <%= f.email_field :email, class: 'form-control' %>

	      <%= f.label :password %>
	      <%= f.password_field :password, class: 'form-control' %>

	      <%= f.label :name %>
	      <%= f.text_field :name, class: 'form-control' %>
	      <br>

	      <%= f.submit "Sign Up", class: "btn btn-primary" %>

	    <% end %>
	    
	  </div>
	  <br>
	    <br>
	    <br>
	    <br>
	    <br>
	    <br>
		
		<br>
		<br>
		<br>
		<br>
	    <br>
	    <br>
	    <br>
	    <br>
	    <br>
	    <br>
	</div> 
</div>
<script type="text/javascript">

$(document).ready(function(){
  $(".sign_up").hide()
  $(".new_account").click(function(e){
    $(".log_in").hide()
    $(".new_account").hide()
  
    $(".sign_up").show()
  })

});

</script>