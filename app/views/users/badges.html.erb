<%= render 'sadhna_cards/header' %>

<div class="badges container">

    <ul class="sc_list list-group">
      <label>Unlocked Badges</label>
      <% if @unlocked_badges.count > 0 %>
        <% @unlocked_badges.each do |badge| %>
          <li class="list-group-item unlocked">
            <table>
              <td>
                <%= badge[0] %>
              </td>
              <td>
                <% if @level_1_badges.include?(badge) %>
                  <span class="level_1 glyphicon glyphicon-star"></span>
                <% else %>
                  <span class="level_2 glyphicon glyphicon-star"></span>
                <% end %>
              </td>
            </table>
          </li>
        <% end %>
      <% else %>
        <li class="list-group-item unlocked"> No Unlocked badges yet</li>
      <% end %>
    </ul>
  

  <ul class="sc_list list-group">
    <label class="level_1">Locked Badges (Level Mathura)</label>
    <br>
      <% @locked_badges.each do |badge| %>
        <% if @level_1_badges.include?(badge) %>
          <li class="list-group-item locked">
            <table>
              <td>
                <%= badge[0] %>
              </td>
              <td>
                <span class="glyphicon glyphicon-star-empty"></span>
              </td>
            </table>
          </li>
        <% end %>
      <% end %>
    <br>
    <br>
    <label class="level_2">Locked Badges (Level Gokula)</label>

      <% @locked_badges.each do |badge| %>
        <% if @level_2_badges.include?(badge) %>
          <li class="list-group-item locked">
            <table>
              <td>
                <%= badge[0] %>
              </td>
              <td>
                <span class="glyphicon glyphicon-star-empty"></span>
              </td>
            </table>
          </li>
        <% end %>
      <% end %>
      
     <br>
     <br>
      <label class="level_3">Locked Badges (Level Vrndavana)</label>

      <% @locked_badges.each do |badge| %>
        <% if @level_3_badges.include?(badge) %>
          <li class="list-group-item locked">
            <table>
              <td>
                <%= badge[0] %>
              </td>
              <td>
                <span class="glyphicon glyphicon-star-empty"></span>
              </td>
            </table>
          </li>
        <% end %>
      <% end %>
  </ul>


<style type="text/css">
  .level_1{
    color: green;
  }

  .level_2{
    color: red;
  }
    
  .level_3{
    color: blue;
  }


</style>
